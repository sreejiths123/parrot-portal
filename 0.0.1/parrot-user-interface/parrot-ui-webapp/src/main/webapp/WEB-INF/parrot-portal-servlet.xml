<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
	<bean id="contactValidator" class="com.parrot.portal.domain.eshop.validator.ContactValidator"/>
    <bean id="indexForm" class="com.parrot.portal.controller.MyController">
        <property name="sessionForm" value="true" />
        <property name="commandName" value="contact" />
        <property name="commandClass" value="com.parrot.portal.domain.eshop.impl.Contact" />
        <property name="validator" ref="contactValidator" />
        <property name="formView" value="index" />
        <property name="successView" value="success.htm" />
    </bean>
    
    <bean id="urlMapping" class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping"> 
        <property name="mappings">
            <props>
                <prop key="/index.html">indexForm</prop>
            </props>
        </property>
    </bean>

    <bean id="viewResolver" class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="viewClass" value="org.springframework.web.servlet.view.JstlView" />
        <property name="prefix" value="/" />
        <property name="suffix" value=".jsp" />
    </bean>
    
    <bean id="messageSource" class="org.springframework.context.support.ResourceBundleMessageSource">
        <property name="basename" value="messages" />
    </bean>
    
</beans>