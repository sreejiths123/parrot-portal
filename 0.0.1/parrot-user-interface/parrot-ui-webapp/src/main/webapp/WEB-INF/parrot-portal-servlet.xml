<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
	<bean id="contactValidator" class="com.parrot.portal.domain.eshop.validator.ContactValidator"/>
    <bean id="indexForm" class="com.parrot.portal.controller.MyController">
        <property name="sessionForm"><value>true</value></property>
        <property name="commandName"><value>contact</value></property>
        <property name="commandClass"><value>com.parrot.portal.domain.eshop.impl.Contact</value></property>
        <property name="validator"><ref bean="contactValidator" /></property>
        <property name="formView"><value>index</value></property>
        <property name="successView"><value>success.htm</value></property>
    </bean>
    
    <bean id="urlMapping" class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping"> 
        <property name="mappings">
            <props>
                <prop key="/index.html">indexForm</prop>
            </props>
        </property>
    </bean>

    <bean id="viewResolver" class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="viewClass">
           <value>org.springframework.web.servlet.view.JstlView</value>
        </property>
        <property name="prefix"><value>/</value></property>
        <property name="suffix"><value>.jsp</value></property>
    </bean>
    
</beans>