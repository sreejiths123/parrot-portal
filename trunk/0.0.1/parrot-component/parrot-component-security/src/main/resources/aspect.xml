<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd 
  http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.0.xsd"
   xmlns:aop="http://www.springframework.org/schema/aop"
>

	<aop:aspectj-autoproxy />

 	<bean id="controllerLoggerAspect" class="com.parrot.portal.security.controller.aop.LogControllerRequestAspect" />

	<aop:config>

		<aop:pointcut id="handleRequestInternalPointcut"
			expression="execution(* com.parrot.portal.controller..handle*(..))" />

		<aop:aspect id="controllerLogger"
			ref="controllerLoggerAspect">

			<aop:before pointcut-ref="handleRequestInternalPointcut"
				method="logRequest" />

		</aop:aspect>

	</aop:config>
 
</beans>
